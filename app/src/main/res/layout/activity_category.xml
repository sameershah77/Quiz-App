<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue1"
    tools:context=".CatgoryActivity">

  <TextView
      android:id="@+id/category_item_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Coding"
      android:layout_margin="20dp"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/current_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/textColor2"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" / "
        android:textColor="@color/textColor2"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/total_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/textColor2"
        android:textSize="20sp"
        android:textStyle="bold"/>
  </LinearLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
      android:layout_marginStart="20dp"
      android:layout_marginTop="60dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/question_desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/question_screen_design_glolw"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:isScrollContainer="true"
        android:text="Sameer Shah"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </TextView>
  </ScrollView>


  <LinearLayout
      android:id="@+id/linearLayout6"
      android:layout_width="match_parent"
      android:layout_height="340dp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="60dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/op1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:gravity="center"
        android:background="@drawable/option_design"
        android:text="Option 1"
        android:textColor="#EFBC21" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/op2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/option_design"
        android:padding="16dp"
        android:text="Option 1"
        android:gravity="center"
        android:textColor="#EFBC21"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/op3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/option_design"
        android:padding="16dp"
        android:text="Option 1"
        android:gravity="center"
        android:textColor="#EFBC21"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/op4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/option_design"
        android:padding="16dp"
        android:text="Option 1"
        android:gravity="center"
        android:textColor="#EFBC21"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/prev_question"
          android:layout_width="100dp"
          android:layout_marginEnd="5dp"
          android:layout_height="wrap_content"
          android:background="@drawable/next_prev_design"
          android:padding="16dp"
          android:text="Previous"
          android:textAlignment="center"
          android:textColor="@color/white" />
      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/next_question"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:background="@drawable/next_prev_design"
          android:padding="16dp"
          android:layout_marginStart="5dp"
          android:layout_weight="1"
          android:text="Next"
          android:textAlignment="center"
          android:textColor="@color/white" />
    </LinearLayout>
  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>