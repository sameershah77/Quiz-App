<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue1"
    tools:context=".OtpVarificationActivity">

    <TextView
        android:layout_width="120dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="Enter the OTP"
        app:layout_constraintEnd_toEndOf="@+id/illustrationImg"
        app:layout_constraintStart_toStartOf="@+id/illustrationImg"
        app:layout_constraintTop_toBottomOf="@+id/illustrationImg" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="We have sent you an OTP at"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/illustrationImg"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/illustrationImg"
        app:layout_constraintTop_toBottomOf="@+id/illustrationImg" />

    <TextView
        android:id="@+id/email_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Enter the OTP"
        android:textColor="@color/textColor1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/illustrationImg"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:padding="10dp"
        android:src="@drawable/otp_illustration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="312dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/illustrationImg"
        app:layout_constraintStart_toStartOf="@+id/illustrationImg">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/otp_design"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/textColor2"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/otp_design"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/textColor2"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/otp_design"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/textColor2"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/otp_design"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/textColor2"
            android:textSize="30sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="showing wrong. " />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/textColor1"
            android:text=" Resend OTP? " />
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/done_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/submit_button_design"
        android:padding="14dp"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.254" />

    <ProgressBar
        android:id="@+id/otp_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>